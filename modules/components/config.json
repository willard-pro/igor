{
  "module": {
    "name": "Components",
    "type": "bash"
  },
  "pages": [
    {
      "name": "main",
      "label": "Component Administration",
      "command": "${page:components}",
      "prompts": [
        {
          "label": "Select action to take",
          "name": "component_action",
          "options": [
            {
              "name": "Configure",
              "value": "configure",
              "condition": "!${command:is_configured}",
              "command": "${page:configure}"
            },
            {
              "name": "Start Component(s)",
              "value": "start",
              "condition": "${command:is_configured}"
            },
            {
              "name": "Stop Component(s)",
              "value": "stop",
              "condition": "${command:is_configured}"
            }
          ]
        }
      ]
    },
    {
      "name": "components",
      "label": "Components",
      "command": "command:docker ${value:page.main.prompt.component_action}  ${value:prompt.get_component}",
      "prompts": [
        {
          "label": "Select component to ${value:page.main.prompt.component_action}",
          "name": "get_component",
          "options": "${command:get_components}"
        },
        {
          "label": "Are you sure you want to ${value:page.main.prompt.component_action} component ${value:prompt.get_component}",
          "name": "confirm_component_action",
          "format": "yn"
        }
      ]
    }
  ]
}