{
  "required": {
    "commands": [
      "awk",
      "gh",
      "git",
      "sed"
    ],
    "checks": [
      {
    	 "command": "is_git_dir",
       "message": "This is not a valid git workspace"
     }
    ]
  },
  "menus": [
    {
      "menu": "main",
      "label": "These are the options available for branch '${command:current_branch}'",
      "options": [
        {
          "name": "Create Branch",
          "command": "menu:create_branch",
          "condition":"is_branch main"
        },
        {
          "name": "Create Pull Request",
          "command": "create_pr",
          "condition":"is_branch main"
        },
        {
          "name": "Prune Local Branches",
          "command": "menu:prune_branches",
          "condition":"is_branch main"
        }
      ]
    },
    {
      "menu": "create_branch",
      "command": "create_branch",
      "arguments": [
        {
          "options": "Select Branch",
          "parameters": [
            {
              "options": [
                {
                  "name": "Feature",
                  "value": "feature"
                },
                {
                  "name": "BugFix",
                  "value": "bugfix"
                }
              ]
            }
          ]
        },
        {
          "prompt": "Enter Ticket Number",
          "format": "number"
        },
        {
          "prompt": "Enter Ticket Name",
          "format": "string"
        },
        {
          "prompt": "Do you wish to continue and create branch '${command:generate_branch_name}'",
          "format": "continue"
        }
      ]
    },
    {
      "menu": "prune_branches",
      "command": "clean_branches",
      "arguments": [
        {
          "prompt": "Do you wish to delete all local branches which do not exist on remote",
          "format": "continue"
        }
      ]
    }
  ]
}