{
  "module": {
    "name": "Module Administration",
    "type": "bash"
  },
  "required": {
    "commands": [
      "zip"
    ]
  },
  "menus": [
    {
      "menu": "main",
      "label": "Module Aministration",
      "options": [
        {
          "name": "Install Module",
          "command": "menu:install_module"
        },
        {
          "name": "Remove Module",
          "command": "menu:remove_module"
        }
      ]
    },
    {
      "menu": "install_module",
      "command": "install_module",
      "arguments": [
        {
          "options": "Select module source",
          "parameters": [
            {
              "options": [
                {
                  "name": "Official modules site",
                  "value": "official",
                  "command": "menu:list_modules"
                },
                {
                  "name": "Custom module packaged in a zip file",
                  "value": "zip"
                }
              ]
            }
          ]
        },
        {
          "prompt": "Enter path to module package",
          "format": "string"
        }
      ]
    },
    {
      "menu": "list_modules",
      "command": "install_module",
      "arguments": [
        {
          "options": "Select module to install",
          "parameters": "${command:get_available_modules}"
        }
      ]
    },
    {
      "menu": "remove_module",
      "command": "remove_module",
      "arguments": [
        {
          "options": "Select module to remove",
          "parameters": "${command:get_installed_modules}"
        },
        {
          "prompt": "Are you sure you want to remove selected module",
          "format": "continue"
        }
      ]
    }
  ]
}