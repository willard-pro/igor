{
  "module": {
    "name": "microservices",
    "label": "MicroServices",
    "type": "bash",
    "configurable": "true"
  },
  "required": {
    "commands": [
      "mysql",
      "grep",
      "docker"
    ]
  },  
  "pages": [
    {
      "name": "main",
      "label": "MicroService Administration",
      "command": "${page:microservice_action}",
      "prompts": [
        {
          "label": "Select microservice",
          "name": "microservice_selected",
          "options": "${command:get_microservices}"
        },
        {
          "label": "Are you sure you want to select all microservices",
          "name": "microservice_select_all",
          "format": "continue",
          "condition": "${value:prompt.microservice_selected} == 'all'"
        }
      ]
    },    
    {
      "name": "microservice_action",
      "label": "Microservice Action",
      "prompts": [
        {
          "label": "Select action to take",
          "name": "microservice_action_selected",
          "options": [
            {
              "name": "Start",
              "value": "start",
              "command": "start_microservice ${value:page.main.prompt.microservice_selected}"
            },
            {
              "name": "Stop",
              "value": "stop",
              "command": "stop_microservice ${value:page.main.prompt.microservice_selected}"
            },
            {
              "name": "Update",
              "value": "update",
              "command": "${page:update}"
            },
            {
              "name": "Package Microservice(s)",
              "value": "package",
              "condition": "${environment:local}"
            }            
          ]
        }
      ]
    },
    {
      "name": "configure",
      "label": "Microservice Administration Configuration",
      "command": "${configure:done}",
      "prompts": [
        {
          "label": "Provide the file path to the microservices configuration",
          "name": "config_file",
          "format": "file",
          "command": "${configure:set}"
        }
      ]
    }
  ]
}
